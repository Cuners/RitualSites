@model IEnumerable<RitualServer.Model.Cross>
<div class="category-container">
    @foreach (var category in Model)
    {
        <a style="text-decoration:none" asp-action="InfoCross" asp-controller="Products" asp-route-id="@category.CrossId">
            <div class="category">
                @if (category.Image != null && category.Image.Length > 0)
                {
                    <img class="category-image" src="data:image;base64,@Convert.ToBase64String(category.Image)" alt="Изображение" />
                }
                else
                {
                    <span>Нет изображения</span>
                }
                <div class="separator"></div>
                <div class="category-name">@category.Product.Name</div>
            </div>
        </a>

    }
</div>
