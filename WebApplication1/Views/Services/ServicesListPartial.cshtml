@model IEnumerable<RitualServer.Model.Service>

<div class="category-container">
    @foreach (var category in Model)
    {
        if (category.CategoryId == 2)
        {
            <a class="category-link" asp-action="InfoTransport" asp-controller="Products" asp-route-id="@category.ServicesId">
                <div class="category">
                    @if (category.Image != null && category.Image.Length > 0)
                    {
                        <img class="category-image" src="data:image;base64,@Convert.ToBase64String(category.Image)" alt="Изображение" />
                    }
                    else
                    {
                        <div style="width:390px;height:200px">
                            <span>Нет изображения</span>
                        </div>

                    }
                    <div class="separator"></div>
                    <div class="category-name">@category.Name</div>
                </div>
            </a>
        }
        else{
            <a class="category-link" asp-action="InfoServices" asp-controller="Products" asp-route-id="@category.ServicesId">
                <div class="category">
                    @if (category.Image != null && category.Image.Length > 0)
                    {
                        <img class="category-image" src="data:image;base64,@Convert.ToBase64String(category.Image)" alt="Изображение" />
                    }
                    else
                    {
                        <div style="width:390px;height:200px">
                            <span>Нет изображения</span>
                        </div>

                    }
                    <div class="separator"></div>
                    <div class="category-name">@category.Name</div>
                </div>
            </a>
        }

    }
</div>
